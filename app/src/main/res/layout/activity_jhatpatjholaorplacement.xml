<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".presceneselector">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#000000"
        tools:context=".mainLevelSelector">
        <TextView
            android:fontFamily="@font/gamegirl"
            android:padding="20dp"
            android:layout_width="fill_parent"
            android:background="#662E17"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="भूकम्प को पुर्व तैयारी"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"/>
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/gharbhitrahudalinearlayout"
                    android:layout_width="80dp"
                    android:padding="3dp"
                    android:background="#ffffff"
                    android:layout_height="80dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/jhatpatjhola"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/gharbhitrahudatextview"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="झट्पट झोला को बारेमा "/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/batomaahudalinearview"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="80dp"
                    android:padding="3dp"
                    android:background="#ffffff"
                    android:layout_height="80dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/flowerpot"/>
                </LinearLayout>
                <TextView
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="कुन सामान कहाँ रख्ने ? "/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>